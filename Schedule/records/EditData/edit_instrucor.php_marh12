include('../../security.php');// Start the session

if (isset($_SESSION['Username'])) {
    $loggedInName = $_SESSION['Username'];

    $query = "SELECT is_Lock_Account, UserTypeID FROM userinfo WHERE Username = '$loggedInName' AND UserTypeID = 2";
    // Execute the query
    $result = $conn->query($query);
   
    
    if ($result) {
        $row = $result->fetch_assoc();

        // Close the result set
        $result->close();

        if ($row['UserTypeID'] == 2) {
        } else {
            header("location: ../index.php");
            // Optionally, you can include a link to log out and return to the login page
        }
    } else {
        // Handle the case where the query fails
        echo "Error in fetching RoleID and UserID: " . $conn->error;
    }
    if (isset($_GET['subid']) && !empty($_GET['subid'])) {
        // Get the instructor IDs from the URL
        $instructorIDs = explode(',', $_GET['subid']);
        $allInstructorData = array(); // Initialize an array to store all section data
    
        // Prepare the SQL statement to fetch data for multiple UserInfoIDs
        $placeholders = str_repeat('?,', count($instructorIDs) - 1) . '?';
        
        //$subsql = "SELECT i.*, usi.*, isp.SpecializationName, isp.InstructorSpecializationsID
      //      FROM instructors i
    //        INNER JOIN userinfo usi ON i.UserInfoID = usi.UserInfoID
  //          LEFT JOIN instructorspecializations isp ON isp.InstructorID = i.InstructorID
//            WHERE usi.UserInfoID IN ($placeholders) GROUP BY usi.UserInfoID";

	$subsql = "SELECT i.*, usi.*, isp.SpecializationName, isp.InstructorSpecializationsID
		FROM instructors i
		INNER JOIN userinfo usi ON i.UserInfoID = usi.UserInfoID
		LEFT JOIN instructorspecializations isp ON isp.InstructorID = i.InstructorID
		WHERE usi.UserInfoID IN ($placeholders)
		GROUP BY i.InstructorID, usi.UserInfoID, isp.SpecializationName, isp.InstructorSpecializationsID

    
        $stmt = mysqli_prepare($conn, $subsql);
    
        if ($stmt === false) {
            echo "Error preparing statement: " . mysqli_error($conn);
        } else {
            // Bind parameters for each UserInfoID
            $types = str_repeat('i', count($instructorIDs)); // 'i' represents integer type
            mysqli_stmt_bind_param($stmt, $types, ...$instructorIDs);
    
            // Execute the statement
            mysqli_stmt_execute($stmt);
    
            // Get the result
            $resultsection = mysqli_stmt_get_result($stmt);
    
            if ($resultsection) {
                // Fetch all data for the specified UserInfoIDs
                while ($secdata = mysqli_fetch_assoc($resultsection)) {
                    $allInstructorData[] = $secdata;
                }
    
                if (empty($allInstructorData)) {
                    echo "No instructor found for the provided IDs";
                } else {
                    // Output instructor data or perform further operations
                    // print_r($allInstructorData);
                }
            } else {
                echo "Error executing the query: " . mysqli_error($conn);
            }
    
            // Close the statement
            mysqli_stmt_close($stmt);
        }
    } else {
        echo "No instructor ID provided!";
    }
    
    
    // Close the database connection
    $conn->close();
}
